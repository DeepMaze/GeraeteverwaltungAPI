#!/usr/bin/env node

var app = require('../app');
var http = require('http');
var normalizePort = require('../helperFunctions/normalizePort');
var onError = require('../helperFunctions/onError');
var onListening = require('../helperFunctions/onListening');

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

var server = http.createServer(app);

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);